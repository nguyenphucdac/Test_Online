@model Test_Online.Models.Document

@using (Html.BeginForm("Uploading","Acount", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="height:400px">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="modal-content">
            <div class="modal-header">

                <div class="signin-form profile" style="height:400px">
                    <h3 class="agileinfo_sign">Up Load tài liệu</h3>
                    <hr />
                    <div class="login-form">

                        <div class="form-group">
                            @Html.Label("Tên tài liệu", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-5">
                                @Html.EditorFor(model => model.Link, new { htmlAttributes = new { @class = "form-control", @id = "name_doc" } })
                                @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.File, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-5">
                                <input type="file" name="file" />
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Chủ đề", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-5">
                                @Html.DropDownList("Topic_Id", null, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Id)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-5">
                                <input type="submit" value="Tải lên" class="btn btn-default" id="btnCreate" />
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
}

