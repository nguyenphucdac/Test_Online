@using Test_Online.Models;
@using PagedList.Mvc
@model PagedList.IPagedList<History>

@{
    ViewBag.Title = "historyTest";
    Layout = "~/Views/Layout/web/Home_Layout.cshtml";

    IEnumerable<History> lstHistory = ViewBag.lstHistory;
}

<div class="container" style="margin-bottom:500px">
    <div class="col-md-12" style="height: 28px; background-color:#4e9b1f; margin-bottom: 20px">
        <span style="color:white; font-size: 20px;font-weight:bold">Các câu hỏi đã làm</span>
        <div class="col-md-12" style="background-color:#ede7e7; height:1px"></div>
    </div>
    @if (lstHistory.Count() != 0)
    {
        <div class="col-md-12">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Tiêu đề</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < lstHistory.Count(); i++)
                    {

                        <tr>
                            <td style="color:black" class="col-md-8"><span style="font-weight:bold"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span> @Html.Raw(lstHistory.ElementAt(i).Question.Title)</td>
                            <td style="color:black" class="col-md-2">
                                @if(lstHistory.ElementAt(i).isTrue == true)
                                {
                                    <img src="~/Content/common/images/ticked.png" height="40" width="40" />
                                }
                                else
                                {
                                    <img src="~/Content/common/images/x.png" height="40" width="40"/>
                                }
                            </td>
                            <td style="color:black" class="col-md-2"><a class="btn btn-danger" href="@Url.Action("QuestionDetail", "Question", new { @questionId = lstHistory.ElementAt(i).Question_Id })">Xem chi tiết</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div style="text-align:center; padding-top:50px;">
            <h3>Bạn chưa làm câu hỏi nào hãy tham gia làm các đề thi để rèn luyện nhé !!!</h3>
        </div>
    }

    <div class="dlink container">
        @Html.PagedListPager(Model, page => Url.Action("Index", "Question", new
  {
      @pageIndex = page
  }))
    </div>

</div>
<style>
    .checked {
        color: orangered;
    }
</style>

