@model Test_Online.Models.Member
@using Test_Online.Models

@{ 
    List<Topic> lstTopic = ViewBag.lstTopicPractice;
}

@using (Ajax.BeginForm("Update", "Acount", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "checkName" }))
{
    @Html.AntiForgeryToken()

    <div class="col-md-12" style="height:500px">
       
        <div class="modal-content">
            <div class="modal-header">

                <div class="signin-form profile" style="height:500px">
                    <h3 class="agileinfo_sign">Thành tích học tập</h3>
                    <hr />
                    <div class="login-form">
                        <div class="w3layouts_mail_grid">
                            <div class="col-md-6 agileits_mail_grid_left agileinfo_mail_grid_left">
                                <div class="agileits_mail_grid_lft_grid wthree_mail_grid_lft_grid">
                                    <ul>
                                        <li style="float:left"><i class="fa fa-long-arrow-right" aria-hidden="true"></i> <span class="result">Số câu hỏi đã làm : @ViewBag.sum</span></li>
                                        <li style="float:left"><i class="fa fa-long-arrow-right" aria-hidden="true"></i> <span class="result">Số câu hỏi trả lời đúng  : @ViewBag.numberTrue</span></li>
                                        <li style="float:left"><i class="fa fa-long-arrow-right" aria-hidden="true"></i> <span class="result">Chủ đề cần cải thiện : </span></li>
                                        <li style="float:left">

                                            @for (int i = 0; i < lstTopic.Count; i++)
                                            {
                                                <a href="@Url.Action("Index","Question", new { @topicId = lstTopic.ElementAt(i).Id})" class="btn btn-danger" style="color:white;margin-left:20px">@lstTopic.ElementAt(i).Name</a>
                                            }
                                        </li>

                                        <li style="float:left"><i class="fa fa-long-arrow-right" aria-hidden="true"></i> <span class="result">Số tài liệu tải lên : @ViewBag.numberDocument</span></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>

            </div>
        </div>

    </div>
}
<style>
    .result {
        font-size: 18px;
    }
</style>


