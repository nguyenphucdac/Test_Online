@using Test_Online.Models
@model Member

@{
    ViewBag.Title = "ViewProfile";
    Layout = "~/Views/Layout/web/Home_Layout.cshtml";

    Member member = (Member)Session["member"];
    List<Topic> lstTopic = ViewBag.lstTopicPractice;

}

<div class="container" style="margin-top:50px; margin-bottom:300px">
    
    <div class="col-md-3">
        <div style="text-align:center">
            @if (member.image != null)
            { 
                <img src = "@Url.Content("~/Content/common/images/" + member.image)" width = "250" height = "100" />
            }
            else
            {
                <img src="~/Content/web/images/default_user.png" width="250" height="250" />
            }
        </div>
        @using (Ajax.BeginForm("PractiseResult", "Acount", new AjaxOptions { @UpdateTargetId = "AjaxReplace", InsertionMode = InsertionMode.Replace }))
        {
            <div style="background-color:#ae1d1d;text-align:center; margin-top:10px;">
                <input type="submit" value="@member.Name" style="background-color:#ae1d1d; border:0px solid black; font-weight:bold; color:white;font-size:25px" width="350" />
            </div>
        }
        @using (Ajax.BeginForm("ChangeInfomation", "Acount", new AjaxOptions { @UpdateTargetId = "AjaxReplace", InsertionMode = InsertionMode.Replace }))
        {
            <div style="margin-top:10px;border:1px solid red">
                <input type="submit" class="btn btn-default" value="Thay đổi thông tin" style="font-weight:bold; border:0px solid black;font-size:18px" width="350"  />
            </div>
        }
        @using (Ajax.BeginForm("UploadDocument", "Acount", new AjaxOptions { @UpdateTargetId = "AjaxReplace", InsertionMode = InsertionMode.Replace }))
        {
            <div style="margin-top:10px;border:1px solid red">
                <input type="submit" class="btn btn-default" value="Upload tài liệu" style="font-weight:bold; border:0px solid black;font-size:18px" width="350" />
            </div>
        }
        @using (Ajax.BeginForm("CreateHelp", "Acount", new AjaxOptions { @UpdateTargetId = "AjaxReplace", InsertionMode = InsertionMode.Replace }))
        {
            <div style="margin-top:10px;border:1px solid red">
                <input type="submit" class="btn btn-default" value="Gửi câu hỏi" style="font-weight:bold; border:0px solid black;font-size:18px" width="350" />
            </div>
        }
        <div style="margin-top:10px;border:1px solid red">
            <a class="btn btn-default" style="font-weight:bold; border:0px solid black;font-size:18px" width="350" href="@Url.Action("HistoryTest","Acount")" >Các câu hỏi đã làm</a>
        </div>
    </div>
    <div class="col-md-9" id="AjaxReplace" style="height:500px">
        <div class="modal-content">
            <div class="modal-header">

                <div class="signin-form profile" style="height:500px">
                    <h3 class="agileinfo_sign">Thành tích học tập</h3>
                    <div class="login-form">
                        <div class="w3layouts_mail_grid">
                            <div class="col-md-12 agileits_mail_grid_left agileinfo_mail_grid_left">
                                <div class="agileits_mail_grid_lft_grid wthree_mail_grid_lft_grid">
                                    <ul>
                                        <li style="float:left;"><i class="fa fa-long-arrow-right" aria-hidden="true"></i> <span class="result">câu hỏi đã làm : @ViewBag.sum</span></li>
                                        <li style="float:left; margin-left:20px"><i class="fa fa-long-arrow-right" aria-hidden="true"></i> <span class="result">câu hỏi trả lời đúng  : @ViewBag.numberTrue</span></li>
                                        <li style="float:left;margin-left:20px"><i class="fa fa-long-arrow-right" aria-hidden="true"></i> <span class="result">tài liệu tải lên : @ViewBag.numberDocument</span></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-md-12 agileits_mail_grid_left agileinfo_mail_grid_left">
                                <div class="agileits_mail_grid_lft_grid wthree_mail_grid_lft_grid">
                                    <ul> 
                                        <li style="float:left"><i class="fa fa-long-arrow-right" aria-hidden="true"></i> <span class="result"> Chủ đề cần cải thiện : </span></li>
                                        <li style="float:left">

                                            @for (int i = 0; i < lstTopic.Count; i++)
                                            {
                                                <a href="@Url.Action("Index","Question", new { @topicId = lstTopic.ElementAt(i).Id})" class="btn btn-danger" style="color:white; margin-left:20px; margin-top: 10px;">@lstTopic.ElementAt(i).Name</a>
                                            }
                                        </li>

                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-12 agileits_mail_grid_left agileinfo_mail_grid_left">
                                <div class="agileits_mail_grid_lft_grid wthree_mail_grid_lft_grid">
                                    <ul>
                                        <li style="float:left"><i class="fa fa-long-arrow-right" aria-hidden="true"></i> <span class="result"> Biểu đô hoạt động : </span></li> 
                                    </ul>
                                    <img src="@Url.Action("MakeChart", "Acount")" />
                                </div>
                            </div>
                           
                            </div>
                        </div>
                </div>

            </div>
        </div>
    </div>
</div>
<style>
    .result{
        font-size:18px;
    }
</style>