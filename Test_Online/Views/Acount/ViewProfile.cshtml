@using Test_Online.Models
@model Member

@{
    ViewBag.Title = "ViewProfile";
    Layout = "~/Views/Layout/web/Home_Layout.cshtml";

    Member member = (Member)Session["member"];

}

<div class="container" style="margin-top:50px; margin-bottom:300px">
    <div class="col-md-4">
        <div style="text-align:center">
            <img src="~/Content/web/images/batman.jpg" width="350" height="200" />
        </div>
        @using (Ajax.BeginForm("PractiseResult", "Acount", new AjaxOptions { @UpdateTargetId = "AjaxReplace", InsertionMode = InsertionMode.Replace }))
        {
            <div style="background-color:#ae1d1d;text-align:center; margin-top:10px;">
                <input type="submit" value="@member.Name" style="background-color:#ae1d1d; border:0px solid black; font-weight:bold; color:white;font-size:30px" width="350" />
            </div>
        }
        @using (Ajax.BeginForm("ChangeInfomation", "Acount", new AjaxOptions { @UpdateTargetId = "AjaxReplace", InsertionMode = InsertionMode.Replace }))
        {
            <div style="background-color:#808080;text-align:center; margin-top:10px">
                <input type="submit" value="Thay đổi thông tin" style="background-color:#808080;border:0px solid black;color:white; font-size:18px" width="350" />
            </div>
        }
        @using (Ajax.BeginForm("ChangeInfomation", "Acount", new AjaxOptions { @UpdateTargetId = "AjaxReplace", InsertionMode = InsertionMode.Replace }))
        {
            <div style="background-color:#808080;text-align:center; margin-top:10px">
                <input type="submit" value="Xem thông báo" style="background-color:#808080;border:0px solid black;color:white; font-size:18px" width="350" />
            </div>
        }
    </div>
    <div class="col-md-8" id="AjaxReplace" style="height:400px">
        <div class="modal-content">
            <div class="modal-header">

                <div class="signin-form profile" style="height:300px">
                    <h3 class="agileinfo_sign">Thành tích học tập</h3>
                    <div class="login-form">
                        
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
