@model Test_Online.Models.advice

@using (Html.BeginForm("PostQuestion", "Acount", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
   
    <div class="form-horizontal" style="height:500px">

        <div class="modal-content">
            <div class="modal-header">

                <div class="signin-form profile" style="height:500px">
                    <h3 class="agileinfo_sign">Gửi câu hỏi về hệ thống</h3>
                    <hr />
                    <div class="login-form">

                        
                        <div class="form-group">
                            @Html.Label("Nội dung", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                <input type="text" name="content"  />
                            </div>
                        </div>
                       
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-5">
                                <input type="submit" value="Gửi lên" class="btn btn-default" id="btnCreate" />
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
}