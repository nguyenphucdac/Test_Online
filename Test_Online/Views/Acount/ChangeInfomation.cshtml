@model Test_Online.Models.Member


@using (Html.BeginForm("Update", "Acount", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="col-md-12" style="height:500px">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Rank)
        @Html.HiddenFor(model => model.Type_Member_Id)

        <div class="modal-content">
            <div class="modal-header">
                
                <div class="signin-form profile" style="height:400px">
                    <h3 class="agileinfo_sign">Thay đổi thông tin cá nhân</h3>
                    <hr />
                    <div class="login-form">
                        <div class="form-group">
                            @Html.Label("Tên", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-5">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                <span id="checkName" style="font-size:12px; color:red"></span>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group">
                            @Html.Label("Mật khẩu", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-5">
                                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-5">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        
                        <div class="form-group">
                            @Html.Label("Ảnh đại diện", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-5">
                                <input type="file" name="image" class = "form-control" />
                                @*@if(Model.image != null)
                                {
                                    <img src="~/Content/common/images/@Model.image" height="100" width="100" />
                                }*@
                                
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-5" style="height:40px">
                                <input type="submit" value="Lưu" class="btn btn-default"/>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>
}


