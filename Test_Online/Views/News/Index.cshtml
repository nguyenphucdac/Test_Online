@using Test_Online.Models;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/web/Home_Layout.cshtml";
    
    IEnumerable<News> lstNews = ViewBag.lstNews;
}

<div class="container" style="margin-bottom: 100px">
    <div class="col-md-12" style="height: 28px; background-color:#4e9b1f; margin-bottom: 20px">
        <span style="color:white; font-size: 20px;font-weight:bold">Tin tức</span>
        <div class="col-md-12" style="background-color:#ede7e7; height:1px"></div>
    </div>
    <div style="padding-left:10px; background-color:white" class="col-md-12">
        @for (int i = 0; i < lstNews.Count(); i++)
            {

            <div class="col-md-12">
                <div class="col-md-3" style="align-content:center">
                    <div class="hovereffect w3ls_banner_bottom_grid" style="text-align:center">
                        <img style="padding-top:10px" height="150" width="300" src="@Url.Content("~/Content/common/images/" + lstNews.ElementAt(i).Image)" alt=" " />
                    </div>
                </div>
                <div class="col-md-9">
                    <div style="padding-top:10px">
                        <span style="font-weight:bold;">@Html.Raw(lstNews.ElementAt(i).title)</span>
                    </div>
                    <div>
                        <span style="font-size: 12px; font-style:italic; color:#1013a8">@lstNews.ElementAt(i).Created_Time</span>
                    </div>
                </div>
               
            </div>
            <div class="col-md-12" style="background-color:#ede7e7; height:1px"></div>
        }
    </div>

</div>

