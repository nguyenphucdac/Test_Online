@using Test_Online.Models
@model IEnumerable<News>

@{
    ViewBag.Title = "Tin tức";
    Layout = "~/Areas/Admin/Views/Layout/admin/Admin_Layout.cshtml";
}

<div class="header">
    <h2>Quản Lý Tin Tức</h2>
    <div style="height:1px;background-color:black; margin-top: 10px"></div>
    <a href="@Url.Action("Create", "News_Admin")" class="btn btn-default" style="float:right; margin-top : 10px; margin-right : 10px;">Thêm Mới</a>

</div>
@if (Model != null)
{
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Mã tin</th>
                <th>Tiêu đề </th>
                <th>Ngày đăng </th>
                <th>Lượt xem</th>
                <th>Người đăng</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>@Model.ElementAt(i).Id</td>
                    <td style="font-size:10px">@Html.Raw(Model.ElementAt(i).title)</td>
                    <td>@Model.ElementAt(i).Created_Time</td>
                    <td>@Model.ElementAt(i).View</td>
                    <td>@Model.ElementAt(i).Member.Name</td>
                    
                    <td>@Html.ActionLink("Sửa", "Edit", new { @Id = @Model.ElementAt(i).Id })</td>
                    <td>@Html.ActionLink("Xóa", "Delete", new { @Id = @Model.ElementAt(i).Id })</td>
                </tr>
            }
        </tbody>
    </table>
}
<style>
    .gridFooter {
        border: 1px solid black;
        color: white;
        font-weight: bold;
        font-size: 25px;
        text-align: center;
    }

    .gridRow {
        background-color: #e6d8d8;
    }

    .header {
        text-align: center;
        margin-top: 20px;
    }
</style>

