@model Test_Online.Models.advice

@{
    ViewBag.Title = "CreatedFeedback";
    Layout = "~/Areas/Admin/Views/Layout/admin/Admin_Layout.cshtml";
}

@using (Html.BeginForm("SendMessage", "Feedback"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Trả lời phản hồi người dùng</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Hidden("id", Model.Id)
        <div class="form-group">
            @Html.Label("Gửi tới :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span style="color:#17489f">@Model.Member.Name</span>
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Nội dung :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span style="color:#17489f">@Model.content</span>
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Nội dung", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control" name="message" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Gửi" class="btn btn-default" />
            </div>
        </div>
    </div>

}
