
@{
    ViewBag.Title = "Tin tức";
    Layout = "~/Areas/Admin/Views/Layout/admin/Admin_Layout.cshtml";
}

<div class="header">
    <h2>Thông báo người dùng</h2>
    <div style="height:1px;background-color:black; margin-top: 10px"></div>
    
</div>
@using (Html.BeginForm("SendMessage", "Notification", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <hr />
       
        <div class="form-group">
            <span class="control-label col-md-3">Nội dung thông báo</span>
            <div class="col-md-8">
                <input type="text" name="message" class="form-control" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value="Gửi" class="btn btn-default" id="btnCreate" />
            </div>
        </div>
    </div>

}
