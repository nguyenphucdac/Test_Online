@using Test_Online.Models
@using PagedList.Mvc
@model PagedList.IPagedList<Document>

@{
    ViewBag.Title = "Tài liệu";
    Layout = "~/Areas/Admin/Views/Layout/admin/Admin_Layout.cshtml";
}

<div class="header">
    <h2>Quản Lý Tài liệu tham khảo</h2>
    <div style="height:1px;background-color:black; margin-top: 10px"></div>
    <div class="col-md-2" style="margin-top:10px">
        <select required name="typeInfo" class="form-control" id="select_sort">
            <option value="0">---Sắp xếp---</option>
            <option value="1">mới nhất</option>
            <option value="2">cũ nhất</option>
            <option value="3">download nhiều nhất</option>

        </select>
    </div>
    <a href="@Url.Action("Create", "Document_Admin")" class="btn btn-default" style="float:right; margin-top : 10px; margin-right : 10px;">Thêm Mới</a>

</div>
@if (Model != null)
{
    <div id="ajaxReplace">
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>Mã tài liệu</th>
                    <th>Tên </th>
                    <th>Chủ đề</th>
                    <th>Lượt tải</th>
                    <th>Ngày đăng </th>
                    <th>Người đăng</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <tr>
                        <td>@Model.ElementAt(i).Id</td>
                        <td>@Model.ElementAt(i).Link</td>
                        <td>@Model.ElementAt(i).Topic.Name</td>
                        <td>@Model.ElementAt(i).Download</td>
                        <td>@Model.ElementAt(i).Created_Time</td>
                        <td>@Model.ElementAt(i).Member.Name</td>
                        <td>@Html.ActionLink("Tải về", "Download", new { @Id = @Model.ElementAt(i).Id })</td>
                        <td>@Html.ActionLink("Sửa", "Edit", new { @Id = @Model.ElementAt(i).Id })</td>
                        <td>@Html.ActionLink("Xóa", "Delete", new { @Id = @Model.ElementAt(i).Id })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
<div class="dlink container">
    @Html.PagedListPager(Model, page => Url.Action("Index", "Question_Admin", new
{
    @pageIndex = page
}))
</div>

<style>
    .gridFooter {
        border: 1px solid black;
        color: white;
        font-weight: bold;
        font-size: 25px;
        text-align: center;
    }

    .gridRow {
        background-color: #e6d8d8;
    }

    .header {
        text-align: center;
        margin-top: 20px;
    }
</style>

<script>
    $("#select_sort").change(function () {

        var selectedVal = $(this).find(':selected').val();
        var Helpers = {
            Domain: 'http://' + location.hostname + ':' + location.port
        };
        var param = JSON.stringify({
                    'typeSort': selectedVal
                });
                $.ajax({
                    type: "GET",
                    url: Helpers.Domain + "/Admin/Document_Admin/Sort",
                    traditional: true,
                    async: false,
                    cache: false,
                    datatype: "json",
                    contentType: 'application/json',
                    data: {'typeSort': selectedVal},
                    success: function (data) {
                        debugger;
                        $('#ajaxReplace').empty();
                        $('#ajaxReplace').html(data);
                    },
                    error: function (arg, data, value) {

                    }
                });
    });
</script>
