@using Test_Online.Models
@model IEnumerable<Document>

<div id="ajaxReplace">
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Mã tài liệu</th>
                <th>Tên </th>
                <th>Chủ đề</th>
                <th>Lượt tải</th>
                <th>Ngày đăng </th>
                <th>Người đăng</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>@Model.ElementAt(i).Id</td>
                    <td>@Model.ElementAt(i).Link</td>
                    <td>@Model.ElementAt(i).Topic.Name</td>
                    <td>@Model.ElementAt(i).Download</td>
                    <td>@Model.ElementAt(i).Created_Time</td>
                    <td>@Model.ElementAt(i).Member.Name</td>
                    <td>@Html.ActionLink("Tải về", "Download", new { @Id = @Model.ElementAt(i).Id })</td>
                    <td>@Html.ActionLink("Sửa", "Edit", new { @Id = @Model.ElementAt(i).Id })</td>
                    <td>@Html.ActionLink("Xóa", "Delete", new { @Id = @Model.ElementAt(i).Id })</td>
                </tr>
            }
        </tbody>
    </table>
</div>

