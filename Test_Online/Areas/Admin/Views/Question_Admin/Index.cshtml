@using Test_Online.Models
@model IEnumerable<Question>

@{
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 10);
    ViewBag.Title = "Câu hỏi";
    Layout = "~/Areas/Admin/Views/Layout/admin/Admin_Layout.cshtml";
}

<div class="header">
    <h2>Quản Lý Câu Hỏi</h2>
    <div style="height:1px;background-color:black; margin-top: 10px"></div>
    <a href="@Url.Action("Create", "Question_Admin")" class="btn btn-default" style="float:right; margin-top : 10px; margin-right : 10px;">Thêm Mới</a>

</div>
@if (Model != null)
{
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Mã câu hỏi</th>
                <th>Môn học </th>
                <th>Chủ đề</th>
                <th>Tiêu đề</th>
                <th>Ngày tạo</th>
                <th>Người tạo</th>

            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>@Model.ElementAt(i).Id</td>
                    <td>@Model.ElementAt(i).Subject.Name</td>
                    <td>@Model.ElementAt(i).Topic.Name</td>
                    <td>@Html.Raw(Model.ElementAt(i).Title)</td>
                    @*<td>@Model.ElementAt(i).Created_Time</td>*@
                    <td>@Model.ElementAt(i).Member.Name</td>
                    <td>@Html.ActionLink("chi tiết", "Detail", new { @Id = @Model.ElementAt(i).Id })</td>
                    <td>@Html.ActionLink("Sửa", "Edit", new { @Id = @Model.ElementAt(i).Id })</td>
                    <td>@Html.ActionLink("Xóa", "Delete", new { @Id = @Model.ElementAt(i).Id })</td>
                </tr>
            }
        </tbody>
    </table>
}
<style>
    .gridFooter {
        border: 1px solid black;
        color: white;
        font-weight: bold;
        font-size: 25px;
        text-align: center;
    }

    .gridRow {
        background-color: #e6d8d8;
    }

    .header {
        text-align: center;
        margin-top: 20px;
    }
</style>



